/* components/recorder/index.wxss */


.timer-audio {
  width: 100%;
}

.timer__title {
  width: 100%;
  height: 24px;
  text-align: center;
  font-size: 25px;
  font-family: Source Han Sans CN;
  color: #333;
}
.timer-audio__stop--timer {
  animation: timer 2s infinite linear;
}
@keyframes timer {
  0% { opacity: 1; }
  50% { opacity: 0; }
  100% { opacity: 1; }
}

.audio__circle {
  margin-top: 21px;
  position: relative;
  height: 100px;
  width: 100%;
}
.circle-image {
  width: 74px;
  height: 74px;
  position: absolute;
  left: calc((100% - 74px) / 2);
  top: calc((100% - 74px) / 2);
  border-radius: 50%;
  border: 1.5px solid #E1E2E2;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.circle-image image {
  width: 28px;
  height: 30px;
}
.circle-selected {
  width: 74px;
  height: 74px;
  position: absolute;
  left: calc((100% - 74px) / 2);
  top: calc((100% - 74px) / 2);
  clip: rect(0, 74px, 74px, 37px);
  animation: circle 2s infinite linear;

}
.circle-selected::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  clip: rect(0, 37px, 74px, 0);
  transform: rotate(50deg);
  border-radius: 50%;
  border: 2px solid #438edb;
  box-sizing: border-box;
}
.circle-selected--start::after {
  border-color: #438edb;
}
.circle-selected--pause::after {
  border-color: red !important;
}
@keyframes circle {
  from {
    transform: rotateZ(0deg);
  }
  to {
    transform: rotateZ(360deg);
  }
}

.confirm {
  margin-top: 15px;
  height: 45px;
  width: 100%;
  line-height: 45px;
  text-align: center;
  font-size: 15px;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: #FF5656;
  transition: height 0.3s;
  overflow: hidden;
}
/* components/picker/picker.wxss */

.picker_bc-show {
  visibility: visible;
  opacity: 1;
}

.picker_bc-hide {
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.picker_bc {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999998;
  background-color: rgba(0, 0, 0, 0.3);
}

.picker_block {
  width: 98vw;
  position: fixed;
  bottom: 1vw;
  left: 1vw;
  background-color: #fff;
  border-radius: 30px;
  z-index: 1000000;
  min-height: 50vh;
}

.picker_block-show {
  animation: show 0.3s forwards;
  opacity: 1;

}
@keyframes show {
  from {
    transform: translateY(80%);
  }

  to {
    transform: translateY(0);
  }
}

.picker_block-hide {
  animation: hide 0.3s forwards;
}
@keyframes hide {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(100%);
    display: none;
    opacity: 0;
  }
}

.btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 35%;
  position: absolute;
  bottom: 20px;
  right: 20px;
}
.clear {
  font-size: 16px;
  color: #555;
  font-weight: 400;
}
.confirm {
  padding: 5px 15px;
  background-color: #438EDB;
  color: #fff;
  border-radius: 3px;
  font-size: 15px;
}


/* hover - 点击态 */
.hover {
  background-color: #dedede;
}
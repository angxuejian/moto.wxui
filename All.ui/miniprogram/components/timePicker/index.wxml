<!--components/timePicker/index.wxml-->
<drawer-moto title='选择时间' bindclose='onCallbackClose' bindopen='onCallbackOpen' id='drawerMoto'>


  <view slot='popupview'>
  
    <view id='clock__wrap' catchtouchstart="onTouchMove" catchtouchmove="onTouchMove" style="width:{{clock.width}}px;height:{{clock.height}}px;" class="clock">
      
      <view class="clock__center-point"></view>
      <view style="transform: rotateZ({{rotateZ}}deg); top:{{number.paddingTop}}px;" class="clock__center-pointer">
        <view style="width:{{number.width}}px;height:{{number.height}}px;line-height:{{number.height}}px;" class="pointer-circle"></view>
      </view>



      <!-- <view class="clock__center-line1"></view> -->
      <!-- <view class="clock__center-line2"></view> -->

      <view class="clock__numbers">
        <view wx:for='{{hoursArr}}' wx:key='index' class="clock__number-item {{selectedIndex === item.value ? 'clock__number-item__selected' : ''}}" style="{{item.style}}">{{item.value}}</view>
      </view>
    </view>

  </view>
</drawer-moto>
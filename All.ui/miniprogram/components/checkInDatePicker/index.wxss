/* components/checkInDatePicker/index.wxss */



.weeks, .month-item__days {
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1px solid #F5f5f5;
  /* background-color: #438edb; */
}
.weeks > view {
  font-weight: 400;
}
.weeks > view:nth-of-type(1),
.weeks > view:nth-last-of-type(1) {
  color: #FF2C3C;
}

.months {
  width: 100%;
  height: 50vh;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.month-item {
  margin-bottom: 15px;
}
.month-item__name {
  background-color: #fff;
  position: sticky;
  top: -1px;
  height: 40px;
  line-height: 40px;
  z-index: 333;
  font-size: 16px;
  font-weight: 700;
}

.weeks .day-item:nth-child(7n + 0), .month-item__days .day-item:nth-child(7n + 0){
  margin-right: -1px;
}
.day-item {
  width: calc((100% - 28px) / 7);
  height: 50px;
  text-align: center;
  line-height: 45px;
  margin: 5px 0;
  margin-right: calc((100% - ((100% - 28px) / 7 * 7)) / 6);
  /* margin-left: calc((100% - ((100% - 42px) / 7 * 7)) / 7 / 2); */
  border-radius: 6px;
  font-size: 15px;
  /* background-color: red; */
  color: #333;
  font-weight: 600;
}


.confirm {
  border-top: 1px solid #F5f5f5;
  padding-top: 6px;
  box-sizing: border-box;
}

.multiple-btn__show-date {
  width: 93%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.multiple-btn__show-date > .show-date-item:nth-last-of-type(1) {
  text-align: end;
}
.show-date-item {
  width: 40%;
}
.show-date-item > view:nth-of-type(1) {
  font-size: 12px;
	color: #a6a6a6;
	margin-bottom: 2px;
}
.show-date-item > view:nth-of-type(2) {
  font-size: 14px;
  font-weight: 700;
}
.show-date-line {
  font-weight: 700;
  padding-top: 16px;
}


.only-btn__show-date {
  width: 100%;
  text-align: center;
  font-size: 14px;
  font-weight: 700;
}

.confirm-btn {
  box-sizing: border-box;
  width: 100%;
  height: 44px;
  border-radius: 30px;
  color: #fff;
  font-size: 16px;
  text-align: center;
  line-height: 44px;
  font-weight: 600;
  background-color: #438edb;
  margin-top: 12px;
}
<!--components/calendar/calendar.wxml-->

<view>

  <view class="year">
    <view class="solar">{{calendar.year}}.{{calendar.month}}</view>
    <view class="lunar">{{calendar.lunar}}</view>
  </view>


  <view class="date">
    <view class="week">
      <view class="title">
        <view class="contents">
          <block wx:for="{{weeks}}" wx:key='index'>
            <view class="content item-week">{{item}}</view>
          </block>
        </view>
      </view>
    </view>

    <view class="day">
      <!-- indicator-dots -->
      <swiper  circular bindchange="setCurrentDay"  current="1" style=" min-height: 330px;">
        <swiper-item wx:for='{{listDay}}' wx:for-item='days' wx:for-index='i'>
          <view class="title {{ isARow ? 'a-row' : ''}}">
            <view style="transform: translateY(-{{offsetRow}}px);" class="contents">
              <block wx:for="{{days}}" wx:key='index'>
                <view bindtap="selectDate" data-i='{{i}}' data-index='{{index}}'
                  style="color: {{item.color}}; background-color: {{item.b_color}}"
                  class="content item-day {{itoday === index && 'select-item'}}">
                  <view>{{item.solar}}</view>
                  <view style="color:{{item.l_color}};">{{item.today[item.today.length - 1]}}</view>
                </view>
              </block>
            </view>
          </view>
        </swiper-item>
      </swiper>

      <!-- <view bindtap="selectARow" class="line">
        <view></view>
        <image style="{{isARow ? 'transform: rotate(90deg)' : ''}}" src="../../assets/line-arrow.png"></image>
        <view></view>
      </view> -->
    </view>
  </view>
</view>
/* miniprogram/components/showImage/showImage.wxss */

.show-image_bc {
  position: fixed;
  left: 0;
  top: 0;
  background-color: rgba(0,0,0,0.3);
  width: 100%;
  height: 100%;
  z-index: 999998;
}


.show-image_bc-show {
  visibility: visible;
  opacity: 1;
}

.show-image_bc-hide {
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.image-box {
  width: 80%;
  height: 300px;
  border-radius: 10px;
  background-color: #fff;
  z-index: 999999;
  position: fixed;
  left: calc((100% - 85%) / 2);
  top: calc((100% - 300px) / 2);
  padding: 0 2.5%;
  opacity: 0;
}
.image-box_show {
  animation: show 0.3s forwards;
}

@keyframes show {
  to {
    opacity: 1;
  }
}
.image-box_hide {
  animation: hide 0.3s forwards;
}
@keyframes hide {
  to {
    opacity: 0;
  }
}

.image-box .title {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 10px 10px 0 0;
  font-size: 15px;
  color: #333;
}

.image-box image {
  margin-top: 20px;
  width: 100%;
  height: 200px;
}

.confirm {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-top: 1px solid #f7f7f7;
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 15px;
  color: #333;
  border-radius: 0 0 10px 10px;
}
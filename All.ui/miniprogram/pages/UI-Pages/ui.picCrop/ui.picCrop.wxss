/* miniprogram/pages/UI-Pages/ui.picCrop/ui.picCrop.wxss */
page {
  padding: 0;
}

.box-bc view{
  position: fixed;
  background-color: #000;
  z-index: 3;
  opacity: 0.7;
}

.pic-crop-page {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ededed;
}


.pic-crop-page .box {
  position:fixed;
  z-index: 3;
  border: 1px solid red;
}
.pic-crop-page image {
  position: fixed;
  z-index: 2;
  opacity: 1;
  left: calc((100% - 340px) / 2);
  /* opacity: 0.7; */
}


.confirm {
  padding: 0 17px;
  height: 31px;
  background-color: #04C061;
  color: #fff;
  border-radius: 2px;
  line-height: 31px;
  font-size: 14px;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: #FFFFFF;
  position: fixed;
  bottom: 4vh;
  right: 30px;
  z-index: 5;
}
.scale-fon {
  padding: 0 17px;
  height: 31px;
  background-color: #04C061;
  color: #fff;
  border-radius: 2px;
  line-height: 31px;
  font-size: 14px;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: #FFFFFF;
  position: fixed;
  bottom: 4vh;
  right: 150px;
  z-index: 2;
}


.init {
  position: fixed;
  top: -9999;
  left: -9999;
  opacity: 0;
}
<!--miniprogram/pages/UI-Pages/ui.datePicker/ui.datePicker.wxml-->

<view>
  <view class="item-btn">
    <text>日期选择</text>
    <view>
      <date-picker class="date-picker"></date-picker>
    </view>
  </view>
  <view class="item-btn">
    <text>(带节日)日期选择</text>
    <view>
      <date-picker showLunar='true' bindchange='onCallbackChangeLun'  class="date-picker"></date-picker>
    </view>
  </view>
  <view class="item-btn">
    <text>Change事件</text>
    <view>
      <date-picker bindchange='onCallbackChange' class="date-picker"></date-picker>
    </view>
  </view>
  <view class="item-btn">
    <text>实例方法</text>
    <view>
      <date-picker id="datePicker" bindchange='onCallbackChange' showPred='{{false}}'></date-picker>
      <view bindtap="open" hover-class="hover-font">通过实例方法打开组件</view>
    </view>
  </view>
</view>


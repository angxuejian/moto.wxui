<!--pages/UI-Pages/ui.recorder/ui.recorder.wxml-->
<view>

  <view class="item-btn">
    <text>录制音频</text>
    <view hover-class='hover-font' bindtap="open">
      打开录音
    </view>
  </view>

  <view class="item-btn">
    <text>播放音频</text>
    <view hover-class='hover-font' style="{{ audioSrc ? '' : 'color: #dedede'}}" bindtap="play">
      开始播放
    </view>
  </view>
</view>


<recorder bindchange='onCallbackChange' id='recorder'></recorder>


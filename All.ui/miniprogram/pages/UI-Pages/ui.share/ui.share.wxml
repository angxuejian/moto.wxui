<!--miniprogram/pages/UI-Pages/ui.share/ui.share.wxml-->
<view>



  <view class="share-btn">
    
    <view hover-class="hover-image"  class="item-btn">
      <view><image src="/assets/weFriend.png"></image></view>
      <text>微信好友</text>
      <button open-type="share">微信好友</button>
    </view>

    <view bindtap="open" hover-class="hover-image" class="item-btn">
      <view><image src="/assets/weCircle.png"></image></view>
      <text>微信朋友圈</text>
    </view>

    <view hover-class="hover-image" class="item-btn">
      <view><image src="/assets/weAlbum.png"></image></view>
      <text>保存到相册</text>
    </view>
  </view>
</view>

<show-image id='showImage'></show-image>

/* miniprogram/pages/UI-Pages/ui.share/ui.share.wxss */
page {
  background: linear-gradient(#61687a, #A0A2A1);
}

.share-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100px;
  border-radius: 25px 25px 0 0;
  background-color: #fff;
  box-shadow: 0px 2px 2px #999;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.item-btn {
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  position: relative;
}
.item-btn > view {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
}
.item-btn > view > image {
  width: 28px;
  height: 28px;

}
.item-btn > text {
  font-size: 13px;
  color: #333;
}

.item-btn button {
  position: absolute;
  left: 0;
  top: 0;
}
.item-btn button:not([size='mini']) {
  width: 100%;
  height: 100%;
  opacity: 0;
}
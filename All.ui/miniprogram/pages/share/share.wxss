/* miniprogram/pages/UI-Pages/ui.share/ui.share.wxss */
page {
  background: linear-gradient(#61687a, #A0A2A1);
  padding: 0;
  height: 100vh;
  overflow: hidden;
}
.ui-share {
  width: 100%;
  height: 100%;
}

.share-box {
  height: calc(100% - 100px);
}

.share-poster {
  width: 300px;
  height: 450px;
  border-radius: 1px;
  margin: 0 auto;
  position: relative;
  top: calc((100% - 450px) / 2);
  background-color: #fff;
  padding: 10px 2.5%;
  box-sizing: border-box;
}
.poster {
  width: 100%;
  height: 60%;
  border-radius: 1px;
}

.we-info {
  width: 100%;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 60px;
}

.user {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  height: 100%;
  height: 60px;
}
.user > view{
  font-size: 15px;
  font-weight: 500;
}
.user > image {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}
.user > text {
  font-size: 12px;
  color: #666;
}

.we-info > image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.logo {
  width: 100%;
  margin-top: 32px;
  text-align: center;
  color: #666;
  font-size: 12px;
}


.share-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100px;
  border-radius: 25px 25px 0 0;
  background-color: #fff;
  box-shadow: 0px 2px 2px #999;
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 9999999999;
}
.item-share {
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  position: relative;
}
.item-share > view {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
}
.item-share > view > image {
  width: 28px;
  height: 28px;

}
.item-share > text {
  font-size: 13px;
  color: #333;
}

.item-share button {
  position: absolute;
  left: 0;
  top: 0;
}
.item-share button:not([size='mini']) {
  width: 100%;
  height: 100%;
  opacity: 0;
}

canvas {
  position: fixed;
  top: -10000px;
  left: 0;
}